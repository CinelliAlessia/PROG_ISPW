<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.AccountCtrlGrafico">

    <top>
        <!-- Barra del titolo TopPage -->
        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <Button fx:id="back" layoutX="14.0" layoutY="19.0" onAction="#onBackClick" text="Back" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="20.0" />
            <Label layoutX="570.0" layoutY="40.0" stylesheets="@../styles/title.css" text="ACCOUNT" textAlignment="CENTER" AnchorPane.topAnchor="20.0" />
        </AnchorPane>
    </top>

    <center>
        <!-- Campi di visualizzazione -->
        <AnchorPane layoutX="50.0" layoutY="150.0" BorderPane.alignment="CENTER">

            <AnchorPane layoutX="5.0" layoutY="5.0" prefHeight="122.0" prefWidth="467.0" AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="100.0">
                <Label text="Nome Utente:" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
                <Label fx:id="usernameText" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="5.0" />
                <Label text="Email:" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="50.0" />
                <Label fx:id="emailText" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="50.0" />
                <Label text="Supervisor:" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="95.0" />
                <Label fx:id="supervisorText" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="95.0" />
            </AnchorPane>

            <!-- Generi musicali -->
            <AnchorPane layoutX="615.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="40.0">
                <HBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="45.0" AnchorPane.rightAnchor="45.0" AnchorPane.topAnchor="38.0">
                    <VBox spacing="5.0">
                        <CheckBox fx:id="hipHop" mnemonicParsing="false" text="Hip Hop" />
                        <CheckBox fx:id="jazz" mnemonicParsing="false" text="Jazz" />
                        <CheckBox fx:id="acoustic" mnemonicParsing="false" text="Acoustic" />
                        <CheckBox fx:id="reb" mnemonicParsing="false" text="REB" />
                        <CheckBox fx:id="country" mnemonicParsing="false" text="Country" />
                        <CheckBox fx:id="alternative" mnemonicParsing="false" text="Alternative" />
                    </VBox>
                    <VBox spacing="5.0">
                        <CheckBox fx:id="pop" mnemonicParsing="false" text="Pop" />
                        <CheckBox fx:id="indie" mnemonicParsing="false" text="Indie" />
                        <CheckBox fx:id="classic" mnemonicParsing="false" text="Classic" />
                        <CheckBox fx:id="rock" mnemonicParsing="false" text="Rock" />
                        <CheckBox fx:id="electronic" mnemonicParsing="false" text="Electronic" />
                        <CheckBox fx:id="house" mnemonicParsing="false" text="House" />
                    </VBox>
                </HBox>
                <Label text="Generi Musicali" AnchorPane.leftAnchor="180.0" AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="2.0" />
            </AnchorPane>

            <!-- Tabella playlist -->
            <AnchorPane AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <TableView fx:id="playlistTable" fixedCellSize="0.0" layoutX="131.0" layoutY="30.0" prefHeight="300.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="300.0" text="Nome Playlist" />
                        <TableColumn fx:id="authorColumn" prefWidth="300.0" text="Autore" />
                        <TableColumn fx:id="linkColumn" prefWidth="300.0" text="Link" />
                    </columns>
                </TableView>
            </AnchorPane>
        </AnchorPane>
    </center>

    <bottom>
        <AnchorPane>
            <!-- Pulsante + -->
            <Button fx:id="addButton" maxHeight="-Infinity" maxWidth="-Infinity" minWidth="-Infinity" onAction="#addPlaylistClick" prefHeight="50.0" prefWidth="50.0" text="+" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="0.0" />
            <!-- Bottone Salva -->
            <Button fx:id="saveButton" layoutX="600.0" layoutY="650.0" onAction="#onSaveClick" text="Salva" AnchorPane.bottomAnchor="10.0" />

        </AnchorPane>

    </bottom>

</BorderPane>
