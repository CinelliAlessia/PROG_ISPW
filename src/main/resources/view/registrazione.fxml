<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefWidth="1024.0" prefHeight="640.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegistrazioneCtrlGrafico">

    <top>
        <!-- Barra del titolo TopPage -->
        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
            <Button layoutX="14.0" layoutY="19.0" onAction="#onBackClick" text="Back" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0" />
            <Label alignment="CENTER" layoutX="570.0" layoutY="40.0" stylesheets="@../styles/title.css" text="REGISTRAZIONE" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="10.0" />
        </AnchorPane>
    </top>

    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" layoutX="50.0" layoutY="150.0" spacing="150.0"
                  AnchorPane.bottomAnchor="150.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                  AnchorPane.topAnchor="150.0">
                <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    </rowConstraints>

                    <Label text="Nome Utente" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Email" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Conferma Password" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

                    <TextField fx:id="name" promptText="Nome Utente" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <TextField fx:id="email" promptText="Email" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <PasswordField fx:id="password" promptText="Password" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                    <PasswordField fx:id="confPassword" promptText="Conferma Password" GridPane.columnIndex="1"
                                   GridPane.rowIndex="3"/>

                </GridPane>

                <!-- Selezione dei generi musicali - CheckBox -->
                <VBox alignment="CENTER">
                    <Label text="I tuoi generi musicali preferiti" AnchorPane.leftAnchor="180.0"
                           AnchorPane.rightAnchor="180.0" AnchorPane.topAnchor="2.0">
                        <padding>
                            <Insets bottom="15.0"/>
                        </padding>
                    </Label>
                    <HBox alignment="CENTER" spacing="25.0">
                        <VBox spacing="5.0">
                            <CheckBox fx:id="pop" mnemonicParsing="false" text="Pop"/>
                            <CheckBox fx:id="indie" mnemonicParsing="false" text="Indie"/>
                            <CheckBox fx:id="classic" mnemonicParsing="false" text="Classic"/>
                            <CheckBox fx:id="rock" mnemonicParsing="false" text="Rock"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <CheckBox fx:id="electronic" mnemonicParsing="false" text="Electronic"/>
                            <CheckBox fx:id="house" mnemonicParsing="false" text="House"/>
                            <CheckBox fx:id="hipHop" mnemonicParsing="false" text="HipHop"/>
                            <CheckBox fx:id="jazz" mnemonicParsing="false" text="Jazz"/>
                        </VBox>

                        <VBox spacing="5.0">
                            <CheckBox fx:id="acoustic" mnemonicParsing="false" text="Acoustic"/>
                            <CheckBox fx:id="reb" mnemonicParsing="false" text="REB"/>
                            <CheckBox fx:id="country" mnemonicParsing="false" text="Country"/>
                            <CheckBox fx:id="alternative" mnemonicParsing="false" text="Alternative"/>
                        </VBox>

                        <padding>
                            <Insets left="25.0" right="25.0"/>
                        </padding>
                    </HBox>
                </VBox>
            </HBox>
        </AnchorPane>
    </center>

    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" spacing="15.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                <Text fx:id="errorField" boundsType="LOGICAL_VERTICAL_CENTER" fill="RED" strokeType="OUTSIDE"
                      strokeWidth="0.0" textAlignment="CENTER" textOrigin="CENTER" visible="false"/>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onRegisterClick"
                        stylesheets="@../styles/styles.css" text="Registrati" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets bottom="25.0"/>
                    </VBox.margin>
                </Button>
            </VBox>
        </AnchorPane>
    </bottom>

</BorderPane>
