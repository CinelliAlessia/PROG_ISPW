<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="1024.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.HomePageCtrlGrafico">

    <top>
        <!-- Barra del titolo TopPage -->
        <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
            <!-- Titolo -->
            <Label alignment="CENTER" layoutX="570.0" layoutY="40.0" stylesheets="@../styles/title.css" text="HOME PAGE" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="10.0" />
            <!-- Pulsante Account -->
            <Button fx:id="account" layoutX="14.0" layoutY="19.0" onAction="#onAccountClick" text="Account" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0" />
            <!-- Pulsante Account -->
            <Button fx:id="manager" layoutX="14.0" layoutY="19.0" onAction="#onManagerClick" text="Gestione Playlist" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0" />

        </AnchorPane>
    </top>
    
    <center>
        <AnchorPane BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <VBox alignment="TOP_RIGHT" spacing="25.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0"
                  AnchorPane.topAnchor="50.0">
                <!-- Barra di ricerca -->
                <HBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
                      AnchorPane.topAnchor="75.0">
                    <TextField prefWidth="800.0" promptText="Cerca qui"/>
                    <Button fx:id="searchButton" mnemonicParsing="false" text="Cerca"/>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <AnchorPane AnchorPane.bottomAnchor="75.0">
                    <children>

                        <!-- Tabella Playlist -->
                      <TableView maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                          <columns>
                              <TableColumn prefWidth="200.0" text="Nome Playlist"/>
                              <TableColumn prefWidth="200.0" text="Autore"/>
                              <TableColumn prefWidth="200.0" text="Link"/>
                          </columns>
                          <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                          </columnResizePolicy>
                      </TableView>
                    </children>
                </AnchorPane>
            </VBox>
        </AnchorPane>

    </center>

    <bottom>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" BorderPane.alignment="BOTTOM_CENTER">
            <!-- Pulsante + -->
            <Button fx:id="addButton" maxHeight="-Infinity" maxWidth="-Infinity" onAction="#addPlaylistClick" prefHeight="50.0" prefWidth="50.0" text="+" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="614.0" AnchorPane.rightAnchor="614.0" AnchorPane.topAnchor="0.0" />
        </AnchorPane>
    </bottom>
</BorderPane>
