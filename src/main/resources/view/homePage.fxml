    <!-- Pulsante + -->
    <Button fx:id="addButton" onAction="#addPlaylistClick" text="+" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0" style="-fx-background-radius: 50%; -fx-font-size: 18px;" />
